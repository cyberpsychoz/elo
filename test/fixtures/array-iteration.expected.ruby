(raise "Assertion failed" unless [1, 2, 3].map(&->(x) { x * 2 }) == [2, 4, 6]; true)
(raise "Assertion failed" unless [1, 2, 3, 4].select(&->(x) { !!(x > 2) }) == [3, 4]; true)
(raise "Assertion failed" unless [1, 2, 3].reduce(0, &->(acc, x) { acc + x }) == 6; true)
(raise "Assertion failed" unless [1, 2, 3].any?(&->(x) { !!(x > 2) }) == true; true)
(raise "Assertion failed" unless [1, 2, 3].any?(&->(x) { !!(x > 5) }) == false; true)
(raise "Assertion failed" unless [1, 2, 3].all?(&->(x) { !!(x > 0) }) == true; true)
(raise "Assertion failed" unless [1, 2, 3].all?(&->(x) { !!(x > 2) }) == false; true)
(raise "Assertion failed" unless ["a", "b", "c"].reduce("", &->(acc, x) { acc + x }) == "abc"; true)
(raise "Assertion failed" unless [].map(&->(x) { x * 2 }) == []; true)
(raise "Assertion failed" unless [].select(&->(x) { !!(x > 0) }) == []; true)
(raise "Assertion failed" unless (x = 10; [1, 2, 3].map(&->(y) { x + y })) == [11, 12, 13]; true)
