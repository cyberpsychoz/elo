---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<Layout title="Elo Blog" activeNav="blog">
  <main class="blog-panel">
    <article class="blog-content">
      <header class="page-header centered">
        <h1>Blog</h1>
        <p class="page-intro">Stories, insights, and lessons from building Elo</p>
      </header>

      {posts.map((post) => (
        <a href={`${base}/blog/${post.slug}`} class="blog-post-link">
          <article class="blog-post-card">
            <h2>{post.data.title}</h2>
            <div class="post-meta">
              <time datetime={post.data.date.toISOString().split('T')[0]}>
                {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <span class="post-author">By {post.data.author}</span>
            </div>
            <p class="post-lead">{post.data.lead}</p>
          </article>
        </a>
      ))}
    </article>

    <Footer className="blog-footer" />
  </main>
</Layout>

<style>
  .blog-post-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .blog-post-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 1.5rem;
    transition: all 0.15s ease;
  }

  .blog-post-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .blog-post-card h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .post-meta {
    color: var(--text-secondary);
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .post-meta time,
  .post-meta .post-author {
    display: block;
    margin-bottom: 0.25rem;
  }

  .post-lead {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }
</style>
